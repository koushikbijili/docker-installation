#!/bin/bash

# ---------------------------------------------
# Docker Installation Script for Ubuntu Server
# Author: Koushik
# GitHub: https://github.com/koushikbijili/docker-installation.git
# ---------------------------------------------

# Exit immediately if a command exits with a non-zero status
set -e

echo "---------------------------------------------"
echo "üöÄ Starting Docker installation on Ubuntu..."
echo "---------------------------------------------"

# Update existing packages
sudo apt update -y
sudo apt upgrade -y

# Remove old Docker versions if any
sudo apt remove -y docker docker-engine docker.io containerd runc || true

echo "‚úÖ Old Docker versions removed (if existed)."

# Install required packages
sudo apt install -y ca-certificates curl gnupg lsb-release

# Create directory for Docker‚Äôs official GPG key
sudo mkdir -p /etc/apt/keyrings

# Add Docker‚Äôs official GPG key
sudo curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

# Set up the Docker repository
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
  https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

# Update the package index again
sudo apt update -y

# Install Docker Engine, CLI, Containerd, and Docker Compose plugin
sudo apt install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

# Enable and start Docker service
sudo systemctl enable docker
sudo systemctl start docker

# Add current user to docker group to run docker without sudo
sudo usermod -aG docker $USER

echo "---------------------------------------------"
echo "‚úÖ Docker installation completed successfully!"
echo "---------------------------------------------"
echo ""
echo "üîÅ Please logout and login again, or run:"
echo "   newgrp docker"
echo ""
echo "‚ñ∂ To verify installation, run: docker --version"
echo "---------------------------------------------"
